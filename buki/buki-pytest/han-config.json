{
  "hooks": {
    "test": {
      "command": "pytest",
      "dirsWith": ["pyproject.toml"],
      "dirTest": "grep -qE '^pytest[^a-zA-Z]|\"pytest\"' pyproject.toml",
      "ifChanged": [
        "**/*.py",
        "**/*.pyi",
        "pyproject.toml",
        "pytest.ini",
        "conftest.py"
      ]
    }
  }
}
