            "command": "npx -y @thebushidocollective/han validate --fail-fast --dirs-with docker-compose.*.yaml,docker-compose.*.yml,compose.*.yaml,compose.*.yml -- docker compose config > /dev/null"
          }
        ]
      }
    ]
  }
}
