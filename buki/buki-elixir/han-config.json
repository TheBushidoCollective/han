{
  "hooks": {
    "test": {
      "dirsWith": ["mix.exs"],
      "command": "mix test --stale"
    },
    "format": {
      "dirsWith": [".formatter.exs"],
      "command": "mix format --check-formatted"
    },
    "compile": {
      "dirsWith": ["mix.exs"],
      "command": "mix compile --warnings-as-errors"
    },
    "typecheck": {
      "dirsWith": ["mix.exs"],
      "command": "mix dialyzer"
    }
  }
}
