{
  "hooks": {
    "test": {
      "command": "npm test",
      "dirsWith": ["package.json"],
      "dirTest": "grep -qE '\"vitest\":' package.json",
      "ifChanged": [
        "**/*.{js,jsx,ts,tsx,mjs,cjs}",
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "vitest.config.*"
      ]
    }
  }
}
