{
  "hooks": {
    "format": {
      "command": "cargo fmt --check",
      "dirsWith": ["Cargo.toml"],
      "ifChanged": ["**/*.rs", "Cargo.toml", "Cargo.lock"]
    },
    "lint": {
      "command": "cargo clippy -- -D warnings",
      "dirsWith": ["Cargo.toml"],
      "ifChanged": ["**/*.rs", "Cargo.toml", "Cargo.lock"]
    },
    "test": {
      "command": "cargo test",
      "dirsWith": ["Cargo.toml"],
      "ifChanged": ["**/*.rs", "Cargo.toml", "Cargo.lock"]
    }
  }
}
