{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx -y @thebushidocollective/han@latest validate --fail-fast --dirs-with .markdownlint-cli2.*,.markdownlint.* -- npx markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx -y @thebushidocollective/han@latest validate --fail-fast --dirs-with .markdownlint-cli2.*,.markdownlint.* -- npx markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\""
          }
        ]
      }
    ]
  }
}
