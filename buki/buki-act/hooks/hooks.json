{
  "hooks": {
    "Stop": [
      {
        "name": "act-workflow-validation",
        "description": "Validates GitHub Actions workflows before stopping",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y @thebushidocollective/han hook run --fail-fast --dirs-with .github/workflows -- \"act --dryrun\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "name": "act-workflow-validation",
        "description": "Validates GitHub Actions workflows when agents complete",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y @thebushidocollective/han hook run --fail-fast --dirs-with .github/workflows -- \"act --dryrun\""
          }
        ]
      }
    ]
  }
}
