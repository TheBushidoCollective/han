{
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"lib": ["es2022"],
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"types": ["node", "bun-types"],
		"jsx": "react-jsx"
	},
	"include": ["bin/**/*", "lib/**/*", "index.ts"],
	"exclude": ["node_modules", "dist", "test/**/*", "**/*.js"]
}
