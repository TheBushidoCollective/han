    "prepack": "npm run build && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebushidocollective/han.git"
  },
  "homepage": "https://github.com/thebushidocollective/han",
  "bugs": {
    "url": "https://github.com/thebushidocollective/han/issues"
  },
  "keywords": [
    "bushido",
    "monorepo",
    "validation",
    "hooks",
    "claude",
    "claude-code",
    "testing",
    "ci"
  ],
  "author": "The Bushido Collective",
  "license": "MIT",
  "engines": {
    "node": ">=24"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/commander": "^2.12.0",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.47",
    "commander": "^14.0.2",
    "ink": "^6.5.1",
