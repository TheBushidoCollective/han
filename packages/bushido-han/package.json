{
	"name": "@thebushidocollective/han",
	"version": "1.28.5",
	"description": "CLI for installing and managing curated Claude Code plugins from the Han marketplace",
	"main": "dist/lib/main.js",
	"types": "dist/lib/main.d.ts",
	"type": "module",
	"bin": {
		"han": "bin/han.js"
	},
	"scripts": {
		"build": "tsc && npm run copy-assets",
		"copy-assets": "cp lib/*.md dist/lib/",
		"postbuild": "chmod +x dist/lib/main.js",
		"typecheck": "tsc --noEmit",
		"test": "node dist/test/han.test.js",
		"test:binary": "HAN_TEST_BINARY=true node dist/test/han.test.js",
		"test:all": "npm run test && npm run build:binary && npm run test:binary",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"prepack": "npm run build && npm test",
		"build:binary": "bun scripts/build-bundle.js",
		"build:bundle": "bun scripts/build-bundle.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TheBushidoCollective/han.git"
	},
	"homepage": "https://han.guru",
	"bugs": {
		"url": "https://github.com/TheBushidoCollective/han/issues"
	},
	"keywords": [
		"bushido",
		"validation",
		"hooks",
		"claude",
		"claude-code",
		"testing",
		"ci"
	],
	"author": "The Bushido Collective",
	"license": "MIT",
	"engines": {
		"node": ">=20"
	},
	"files": [
		"bin/",
		"dist/lib/",
		"README.md"
	],
	"optionalDependencies": {
		"@thebushidocollective/han-darwin-arm64": "1.18.1",
		"@thebushidocollective/han-darwin-x64": "1.18.1",
		"@thebushidocollective/han-linux-arm64": "1.18.1",
		"@thebushidocollective/han-linux-x64": "1.18.1",
		"@thebushidocollective/han-win32-x64": "1.18.1"
	},
	"devDependencies": {
		"@anthropic-ai/claude-agent-sdk": "0.1.50",
		"@biomejs/biome": "2.3.7",
		"@types/marked-terminal": "6.1.1",
		"@types/node": "24.10.1",
		"@types/react": "19.2.6",
		"commander": "14.0.2",
		"dotenv": "^17.2.3",
		"esbuild": "^0.27.0",
		"ink": "6.5.1",
		"ink-select-input": "^6.2.0",
		"ink-spinner": "5.0.0",
		"ink-text-input": "^6.0.0",
		"marked-terminal": "7.3.0",
		"react": "19.2.0",
		"react-devtools-core": "^6.1.5",
		"typescript": "5.9.3",
		"yaml": "^2.8.1"
	}
}
