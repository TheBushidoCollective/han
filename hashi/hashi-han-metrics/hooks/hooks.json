{
  "description": "Metrics tracking hooks for agent performance monitoring",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat \"${CLAUDE_PLUGIN_ROOT}/hooks/metrics-tracking.md\"",
            "timeout": 30
          }
        ]
      },
      {
        "description": "Detect user frustration signals for metrics tracking",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/detect-frustration.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/validate-metrics.sh\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
