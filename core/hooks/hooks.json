{
  "description": "Core infrastructure hooks for Han marketplace - all hooks go through orchestrator",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook orchestrate Stop --check --skip-if-questioning",
            "timeout": 30000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook orchestrate SubagentStop --check --skip-if-questioning",
            "timeout": 30000
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook orchestrate SessionStart",
            "timeout": 60000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook orchestrate UserPromptSubmit",
            "timeout": 30000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook orchestrate PreToolUse",
            "timeout": 30000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook orchestrate PostToolUse",
            "timeout": 30000
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook orchestrate SubagentStart",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
