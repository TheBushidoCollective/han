#!/usr/bin/env bash
# Safe wrapper for chown command
# Blocks changing ownership outside project directory or on protected paths

set -euo pipefail

# Source common functions
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/_common.sh"

# Get the real chown command
REAL_CHOWN="$(get_real_command chown)"
if [[ -z "$REAL_CHOWN" ]]; then
    echo "Error: Could not find real chown command" >&2
    exit 1
fi

# Parse arguments to find file paths
files=()
owner=""
flags=()

for arg in "$@"; do
    case "$arg" in
        -*)
            flags+=("$arg")
            ;;
        *)
            # First non-flag is owner:group, rest are files
            if [[ -z "$owner" ]]; then
                owner="$arg"
            else
                files+=("$arg")
            fi
            ;;
    esac
done

# Check each file path
for file in "${files[@]}"; do
    # Block protected paths
    if is_protected_path "$file"; then
        safe_error "Cannot change ownership on protected system path: $file"
    fi

    # Block paths outside project (if CLAUDE_PROJECT_DIR is set)
    if [[ -n "${CLAUDE_PROJECT_DIR:-}" ]]; then
        if ! is_in_project "$file"; then
            safe_error "Cannot change ownership outside project directory: $file (project: $CLAUDE_PROJECT_DIR)"
        fi
    fi
done

# All checks passed - run real chown
exec "$REAL_CHOWN" "$@"
