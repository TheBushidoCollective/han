# -----------------------------------------------------------------------------
# Han Team Platform - Terraform Variables
# -----------------------------------------------------------------------------
#
# Copy this file to terraform.tfvars and fill in the values.
# NEVER commit terraform.tfvars to version control (it's in .gitignore)
#
# For Terraform Cloud, set these as workspace variables instead.
#
# -----------------------------------------------------------------------------

# Project Configuration
project_name      = "han-team-platform"
github_repo       = "thebushidocollective/han-team-platform"
production_branch = "main"
domain            = "han.guru"

# PR Environments
enable_pr_environments = true

# API Server
api_server_root_directory = "packages/han-team-server"
api_custom_domain         = "api.han.guru"

# Website
website_root_directory = "website"
website_custom_domain  = "han.guru"

# GCP DNS (optional - leave gcp_project_id empty to skip)
gcp_project_id    = ""  # e.g., "bushido-collective"
gcp_dns_zone_name = "han-guru"

# Sentry (optional - leave sentry_organization_slug empty to skip)
# Requires SENTRY_AUTH_TOKEN environment variable
sentry_organization_slug = ""  # e.g., "bushido-collective"

# -----------------------------------------------------------------------------
# SECRETS - Generate these with: openssl rand -hex 32
# For Terraform Cloud, mark these as "Sensitive"
# -----------------------------------------------------------------------------

# Required secrets
jwt_secret            = ""
session_secret        = ""
master_encryption_key = ""

# Optional OAuth (leave empty to skip)
github_client_id     = ""
github_client_secret = ""
google_client_id     = ""
google_client_secret = ""
