{
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run vitest test-changed --async",
            "async": true
          }
        ],
        "matcher": "Edit|Write|NotebookEdit"
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run vitest test --async",
            "async": true
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run vitest test --async",
            "async": true
          }
        ]
      }
    ]
  }
}
