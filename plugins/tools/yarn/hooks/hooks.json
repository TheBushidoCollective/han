{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/yarn-reminder.md --must-read-first \"yarn package manager usage\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run yarn install --async",
            "async": true
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run yarn install --async",
            "async": true
          }
        ]
      }
    ]
  }
}
