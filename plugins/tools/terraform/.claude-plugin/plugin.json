{
  "name": "terraform",
  "version": "1.10.0",
  "description": "Terraform configuration validation and infrastructure-as-code best practices",
  "author": {
    "name": "The Bushido Collective",
    "url": "https://thebushido.co"
  },
  "homepage": "https://github.com/thebushidocollective/han",
  "repository": "https://github.com/thebushidocollective/han",
  "license": "Apache-2.0",
  "keywords": ["terraform", "infrastructure", "iac", "devops", "hashicorp"],
  "lspServers": {
    "terraform-ls": {
      "command": "${CLAUDE_PLUGIN_ROOT}/scripts/lsp-entrypoint.sh",
      "args": ["serve"],
      "extensionToLanguage": {
        ".tf": "terraform",
        ".tfvars": "terraform-vars"
      },
      "initializationOptions": {
        "indexing": {
          "ignorePaths": [
            "**/node_modules/**",
            "**/.git/**",
            "**/vendor/**",
            "**/.terraform/**",
            "**/dist/**",
            "**/build/**",
            "**/.next/**",
            "**/out/**"
          ]
        }
      }
    }
  }
}
