{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/ensure-han.sh\"",
            "timeout": 15
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han coordinator ensure --background",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han plugin migrate --silent",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/register-config-dir.sh\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook context",
            "timeout": 10
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/no-time-estimates.md --must-read-first \"no time estimates policy\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/professional-honesty.md --must-read-first \"epistemic rigor and professional honesty\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/ensure-subagent.md --must-read-first \"subagent delegation rules\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/bash-output-capture.md --must-read-first \"bash output capture best practices\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/ensure-skill-use.md --must-read-first \"skill selection and transparency\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/date-handling.md --must-read-first \"date handling best practices\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/prefer-mcp-tools.md --must-read-first \"prefer MCP tools over CLI tools\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/warn-untested-modification.md --must-read-first \"untested code modification safety\"",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/current-datetime.sh\"",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook reference hooks/no-excuses.md --must-read-first \"no excuses for pre-existing issues\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
