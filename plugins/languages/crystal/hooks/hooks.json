{
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run crystal format --async"
          }
        ],
        "matcher": "Edit|Write|NotebookEdit",
        "async": true
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run crystal format --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run crystal test --async"
          }
        ],
        "async": true
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run crystal format --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run crystal test --async"
          }
        ],
        "async": true
      }
    ]
  }
}
