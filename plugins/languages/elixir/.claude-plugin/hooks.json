{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y @thebushidocollective/han hook run elixir format-async --async"
          }
        ],
        "async": true
      },
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y @thebushidocollective/han hook run elixir compile-async --async"
          }
        ],
        "async": true
      },
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y @thebushidocollective/han hook run elixir test-async --async"
          }
        ],
        "async": true
      }
    ]
  }
}
