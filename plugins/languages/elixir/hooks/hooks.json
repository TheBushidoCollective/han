{
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir format --async"
          }
        ],
        "matcher": "Edit|Write",
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir build --async"
          }
        ],
        "matcher": "Edit|Write",
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir test-changed --async"
          }
        ],
        "matcher": "Edit|Write",
        "async": true
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir format --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir build --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir test --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir typecheck --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir coverage --async"
          }
        ],
        "async": true
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir format --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir build --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir test --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir typecheck --async"
          }
        ],
        "async": true
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run elixir coverage --async"
          }
        ],
        "async": true
      }
    ]
  }
}
