{
  "hooks": {
    "claudelint": {
      "command": "uvx claudelint . --strict",
      "dirTest": "test -f .claude-plugin/marketplace.json"
    },
    "markdownlint": {
      "command": "npx -y markdownlint-cli --config ${CLAUDE_PLUGIN_ROOT}/hooks/.markdownlint.json --ignore node_modules .",
      "dirTest": "test -f .claude-plugin/marketplace.json",
      "ifChanged": ["**/*.md"]
    },
    "config-sync": {
      "command": "cd packages/han && bun run lint:config-sync",
      "dirTest": "test -d packages/han && test -f packages/han/package.json",
      "ifChanged": ["**/han-config.json", "**/han-plugin.yml"]
    }
  }
}
