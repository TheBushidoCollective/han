{
  "hooks": {
    "format": {
      "command": "gleam format --check",
      "dirsWith": ["gleam.toml"],
      "ifChanged": ["**/*.gleam", "gleam.toml"]
    },
    "test": {
      "command": "gleam test",
      "dirsWith": ["gleam.toml"],
      "ifChanged": ["**/*.gleam", "gleam.toml"]
    }
  }
}
