{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/install-lsp.sh\"",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run jutsu-gleam format",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "han hook run jutsu-gleam test",
            "timeout": 900
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run jutsu-gleam format",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
