{
  "hooks": {
    "ios-build": {
      "dirsWith": ["*.xcodeproj", "*.xcworkspace"],
      "command": "\"$CLAUDE_PLUGIN_ROOT/scripts/ios-build.sh\"",
      "ifChanged": [
        "**/*.swift",
        "**/*.m",
        "**/*.h",
        "**/*.xib",
        "**/*.storyboard",
        "**/project.pbxproj",
        "**/Package.swift",
        "**/Podfile",
        "**/Podfile.lock",
        "**/*.plist",
        "**/*.xcconfig",
        "**/*.entitlements"
      ]
    }
  }
}
