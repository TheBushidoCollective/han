{
  "hooks": {
    "format": {
      "command": "go fmt ./...",
      "dirsWith": ["go.mod"],
      "ifChanged": ["**/*.go", "**/*.tmpl", "go.mod", "go.sum"]
    },
    "lint": {
      "command": "go vet ./...",
      "dirsWith": ["go.mod"],
      "ifChanged": ["**/*.go", "**/*.tmpl", "go.mod", "go.sum"]
    },
    "test": {
      "command": "go test ./...",
      "dirsWith": ["go.mod"],
      "ifChanged": ["**/*.go", "**/*.tmpl", "go.mod", "go.sum"]
    }
  }
}
