{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/install-lsp.sh\"",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run jutsu-rust format",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "han hook run jutsu-rust lint",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "han hook run jutsu-rust test",
            "timeout": 900
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "han hook run jutsu-rust format",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
