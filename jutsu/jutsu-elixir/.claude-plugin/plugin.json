  "license": "Apache-2.0",
  "keywords": ["elixir", "otp", "ecto"],
  "lspServers": {
    "expert": {
      "command": "${CLAUDE_PLUGIN_ROOT}/scripts/lsp-entrypoint.sh",
      "args": ["--stdio"],
      "extensionToLanguage": {
