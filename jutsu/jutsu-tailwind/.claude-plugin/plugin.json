{
  "name": "jutsu-tailwind",
  "version": "1.3.0",
  "description": "Validation and quality enforcement for Tailwind CSS projects with comprehensive utility-first CSS patterns and best practices.",
  "author": {
    "name": "The Bushido Collective",
    "url": "https://thebushido.co"
  },
  "homepage": "https://github.com/thebushidocollective/han",
  "repository": "https://github.com/thebushidocollective/han",
  "license": "FSL-1.1-ALv2",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "css",
    "utility-first",
    "styling",
    "validation",
    "quality"
  ],
  "lspServers": {
    "tailwindcss": {
      "command": "${CLAUDE_PLUGIN_ROOT}/scripts/lsp-entrypoint.sh",
      "args": [],
      "extensionToLanguage": {
        ".css": "css",
        ".html": "html",
        ".jsx": "javascriptreact",
        ".tsx": "typescriptreact",
        ".vue": "vue"
      },
      "startupTimeout": 60000,
      "restartOnCrash": true,
      "maxRestarts": 3
    }
  }
}
