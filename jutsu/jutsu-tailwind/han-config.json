{
  "hooks": {
    "build": {
      "command": "npx -y tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
      "dirsWith": [
        "tailwind.config.js",
        "tailwind.config.ts",
        "tailwind.config.cjs",
        "tailwind.config.mjs"
      ],
      "ifChanged": [
        "**/*.{html,js,jsx,ts,tsx,vue,svelte}",
        "tailwind.config.*",
        "**/*.css"
      ]
    }
  }
}
