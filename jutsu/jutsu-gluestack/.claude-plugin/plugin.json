{
  "name": "jutsu-gluestack",
  "version": "1.0.0",
  "description": "Validation and quality enforcement for gluestack-ui projects with component patterns, accessibility, and theming skills. Includes MCP server for component discovery and source code retrieval.",
  "author": {
    "name": "The Bushido Collective",
    "url": "https://thebushido.co"
  },
  "homepage": "https://github.com/thebushidocollective/han",
  "repository": "https://github.com/thebushidocollective/han",
  "license": "MIT",
  "keywords": [
    "gluestack",
    "gluestack-ui",
    "react",
    "react-native",
    "nativewind",
    "tailwind",
    "ui-components",
    "accessibility",
    "mcp"
  ],
  "mcpServers": {
    "gluestack-ui": {
      "command": "npx",
      "args": ["-y", "gluestack-ui-mcp-server"],
      "env": {
        "GLUESTACK_PATH": "${GLUESTACK_PATH:-$CLAUDE_PROJECT_DIR/node_modules/gluestack-ui}"
      }
    }
  }
}
