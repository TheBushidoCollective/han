{
  "hooks": {
    "test": {
      "command": "npx -y playwright test",
      "dirsWith": ["playwright.config.ts", "playwright.config.js"],
      "ifChanged": [
        "**/*.e2e.{js,ts}",
        "**/*.spec.{js,ts}",
        "**/*.test.{js,ts}",
        "playwright.config.*",
        "e2e/**/*",
        "tests/**/*"
      ]
    }
  }
}
