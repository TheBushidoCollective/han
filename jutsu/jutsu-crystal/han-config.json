{
  "hooks": {
    "format": {
      "command": "shards install && crystal tool format --check",
      "dirsWith": ["shard.yml"],
      "ifChanged": ["**/*.cr", "**/*.ecr", "shard.yml", "shard.lock"]
    },
    "test": {
      "command": "shards install && crystal spec",
      "dirsWith": ["shard.yml"],
      "ifChanged": ["**/*.cr", "**/*.ecr", "shard.yml", "shard.lock"]
    }
  }
}
