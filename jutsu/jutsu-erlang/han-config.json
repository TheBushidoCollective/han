{
  "hooks": {
    "build": {
      "command": "rebar3 compile warnings_as_errors=true",
      "dirsWith": ["rebar.config"],
      "ifChanged": [
        "**/*.erl",
        "**/*.hrl",
        "**/*.app.src",
        "rebar.config",
        "rebar.lock"
      ]
    },
    "test": {
      "command": "rebar3 eunit",
      "dirsWith": ["rebar.config"],
      "ifChanged": [
        "**/*.erl",
        "**/*.hrl",
        "**/*.app.src",
        "rebar.config",
        "rebar.lock"
      ]
    }
  }
}
