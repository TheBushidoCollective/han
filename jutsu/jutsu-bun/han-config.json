{
  "hooks": {
    "build": {
      "command": "bun build --target=bun --no-bundle",
      "dirsWith": ["bun.lock", "bun.lockb"],
      "ifChanged": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "bun.lockb",
        "bunfig.toml"
      ]
    },
    "test": {
      "command": "bun test --only-failures",
      "dirsWith": ["bun.lock", "bun.lockb"],
      "ifChanged": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "bun.lockb",
        "bunfig.toml"
      ]
    }
  }
}
